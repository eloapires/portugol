programa {
  inteiro numero
  funcao inicio() {
    escreva("Digite um número: ")
    leia(numero)
    se (numero % 2 == 0)
    {
      escreva ("O número é par\n")
    }
    senao
    {
      escreva("O número é ímpar\n")
    }
    se (numero > 0)
    {
      escreva ("O número é positivo\n")
    }
    senao
    {
      escreva ("O número é negativo\n")
    }
  }
}
